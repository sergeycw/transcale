{
  "manifest_version": 3,
  "name": "Unit Autoconverter: US → Metric",
  "version": "0.1.0",
  "description": "Automatically annotates American units on pages with metric equivalents.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Unit Autoconverter: US → Metric"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "dist/sw.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
